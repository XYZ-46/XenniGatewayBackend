{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "ConnectionDB": {
      "XenniDB": "Server=;Database=;User Id=;Password=;TrustServerCertificate=True;"
    },
    "JwtSettings": {
      "Issuer": "domain.com",
      "Audience": "domain.com",
      "SecretKey": "top secret", // minimum 32 chars = 256 bits
      "AccessTokenExpirationMinutes": 30,
      "RefreshTokenExpirationDays": 7,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true,
      "RequireHttpsMetadata": true,
      "SaveToken": true
    }
  }
}
